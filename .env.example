RUN_MODE=local
APP_HOST=0.0.0.0
APP_PORT=8080
LOG_LEVEL=INFO

# LLM
LLM_PROVIDER=openai
LLM_API_KEY=your_key_here
LLM_MODEL=gpt-4.1-mini

# Vector store
VECTOR_BACKEND=faiss
# For Pinecone:
# PINECONE_API_KEY=
# PINECONE_INDEX=

# Legacy DB (Postgres)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=legacy
POSTGRES_USER=legacy
POSTGRES_PASSWORD=legacy

# Target warehouse
TARGET_WAREHOUSE=simulator
# For Snowflake:
# SNOWFLAKE_ACCOUNT=
# SNOWFLAKE_USER=
# SNOWFLAKE_PASSWORD=
# SNOWFLAKE_ROLE=
# SNOWFLAKE_WAREHOUSE=
# SNOWFLAKE_DATABASE=
# SNOWFLAKE_SCHEMA=

# Validation
VALIDATION_MODE=fast
COMPARE_STRATEGY=hash
ROW_SAMPLE_SIZE=1000
FLOAT_TOLERANCE=0.0001
TIMEZONE_DEFAULT=UTC